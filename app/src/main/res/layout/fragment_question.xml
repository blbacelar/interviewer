    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
    android:id="@+id/topic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.tutorial.macbookpro.interviewer.fragments.TopicFragment"/>

    <fragment
    android:id="@+id/questions"
    android:layout_below="@id/topic"
    android:layout_above="@id/buttonPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.tutorial.macbookpro.interviewer.fragments.QuestionsFragment"/>


    <fragment
    android:id="@+id/buttonPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:name="com.tutorial.macbookpro.interviewer.fragments.ButtonsFragment"/>

    </RelativeLayout>
